<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity" android:orientation="vertical" android:weightSum="1">
    <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/status"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent" android:layout_weight="0" android:id="@+id/include2"/>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0"
            app:layout_constraintBottom_toTopOf="@+id/include"
            app:layout_constraintTop_toBottomOf="@+id/include2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/viewPager"/>
    <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/control_bar"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent" android:layout_weight="0" android:id="@+id/include"/>
</androidx.constraintlayout.widget.ConstraintLayout>