<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_actions_spinner" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/direct_actions_recycler" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/direct_actions_spinner" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="За выполнение всех действий вы получите:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView12"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_actions_complete_rubles" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ruble"
            android:id="@+id/imageView11" app:layout_constraintStart_toEndOf="@+id/direct_actions_complete_rubles"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/direct_actions_complete_rubles"
            app:layout_constraintBottom_toBottomOf="@+id/direct_actions_complete_rubles"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="2500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_actions_complete_authority" app:layout_constraintStart_toEndOf="@+id/imageView11"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/accept"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/direct_actions_complete_authority" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Район"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>