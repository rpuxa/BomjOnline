<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Собирать мусор"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_action_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"/>
    <TextView
            android:text="10 / 16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_action_progress" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="-15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_action_energy" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/colored_energy"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/direct_action_energy"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="+10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_action_rubles" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/direct_action_name"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="+100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_action_authority" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/direct_action_name"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp" app:srcCompat="@drawable/ruble"
            android:id="@+id/imageView9"
            app:layout_constraintBottom_toBottomOf="@+id/direct_action_rubles"
            app:layout_constraintTop_toTopOf="@+id/direct_action_rubles"
            app:layout_constraintStart_toEndOf="@+id/direct_action_rubles" android:layout_marginStart="5dp"/>
    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp" app:srcCompat="@drawable/ruble"
            android:id="@+id/imageView10"
            app:layout_constraintBottom_toBottomOf="@+id/direct_action_authority"
            app:layout_constraintTop_toTopOf="@+id/direct_action_authority"
            tools:layout_editor_absoluteX="195dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>