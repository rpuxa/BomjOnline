<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" app:cardElevation="5dp"
                                   app:cardCornerRadius="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="100 / 100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_health" app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="1 997 442"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_rubles"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="13dp"/>
        <TextView
                android:text="Профиль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_profile_text" app:layout_constraintEnd_toEndOf="@+id/status_avatar"
                app:layout_constraintStart_toStartOf="@+id/status_avatar" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/status_avatar"/>
        <TextView
                android:text="Бомж Василий (28 ур.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_name" app:layout_constraintStart_toEndOf="@+id/status_avatar"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@drawable/colored_health"
                android:id="@+id/imageView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/status_name"
                app:layout_constraintStart_toEndOf="@+id/status_energy"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="200 / 200"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:id="@+id/status_energy" app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:textSize="14sp"
        />
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@drawable/ruble"
                android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/status_avatar" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/status_avatar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@drawable/colored_energy"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/status_avatar"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/status_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>